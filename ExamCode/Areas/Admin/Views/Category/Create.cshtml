@model Category


<div class="container">
    <div>
        <h1>
            Create Category
        </h1>
    </div>
    <div>
        <form method="post">
            <div class="mb-3 col-3">
                <label asp-for="Name" class="form-label">Name</label>
                <input asp-for="Name" class="form-control">
                <span asp-validation-for="Name"></span>
            </div>
            
            <button type="submit" class="btn btn-primary">Create</button>
        </form>
    </div>
</div>